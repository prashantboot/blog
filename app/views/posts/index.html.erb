<h1>Our Blog</h1>
<p>Total Blog <%= @post.count %></p>
<% @post.each do |post| %>
<h2><%= link_to post.title, post %></h2>
<p><%= post.content%></p>
<p><%= link_to 'Edit', edit_post_path(post) %> | 
  <%= link_to 'Delete', post, data: {method: 'delete', confirm: 'Are you sure?'} %>
</p>
<hr>
<% end -%>

<p><%= link_to 'Add a new post', new_post_path%></p>